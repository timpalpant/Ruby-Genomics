<tool id="GFFToWig" name="GFF-to-Wig" version="1.0.0">
  <description>converter</description>
  <command interpreter="ruby1.9">gffToWig.rb -i $input -g $dbkey -o $output</command>
  <inputs>
      <param name="input" type="data" format="gff" label="Input GFF file" />
  </inputs>
  <outputs>
      <data name="output" format="wig" metadata_source="input" />
  </outputs>
</tool>
