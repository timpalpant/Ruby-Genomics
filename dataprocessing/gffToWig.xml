<tool id="GFFToWig" name="GFF-to-BigWig" version="1.0.0">
  <description>converter</description>
  <command interpreter="ruby">gffToWig.rb -i $input -g $dbkey -o $output</command>
  <inputs>
      <param name="input" type="data" format="gff" label="Input GFF file" />
  </inputs>
  <outputs>
      <data name="output" format="bigwig" metadata_source="input" />
  </outputs>
</tool>
