<tool id="Logger" name="Log transform" version="1.0.0">
  <description>a Wiggle file</description>
  <command interpreter="ruby1.9">logger.rb -i $input -b $base -o $output</command>
  <inputs>
		<param format="wig" name="input" type="data" label="Z-score the data in" />
		<param name="base" type="integer" value="2" label="Logarithm base" />
  </inputs>
  <outputs>
		<data format="input" name="output" metadata_source="input" />
  </outputs>
  
	<help>
		.. class:: warningmark
		
		This tool requires Wiggle formatted data.
		
		.. class:: warningmark
		
		This tool was contributed by Timothy Palpant.
	</help>
</tool>
