    <param format="bigwig,wig" name="dividend" type="data" label="File 1 (dividend)" />
    <param format="bigwig,wig" name="divisor" type="data" label="File 2 (divisor)" />
  </inputs>
  <outputs>
    <data format="wig" name="output" metadata_source="dividend" />
  </outputs>
